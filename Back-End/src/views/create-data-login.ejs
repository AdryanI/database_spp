<script>
    document.addEventListener("DOMContentLoaded", function() {
        // Menangani perubahan pada dropdown "Kompetensi Keahlian"
        document.getElementById('kompetensi_keahlian').addEventListener('change', function () {
            var selectedOption = this.value;
    
            // Mendapatkan elemen div "kelasDetail"
            var kelasDetailDiv = document.getElementById('kelasDetail');
    
            // Menentukan apakah div "kelasDetail" harus ditampilkan atau tidak
            if (selectedOption !== '') {
                kelasDetailDiv.style.display = 'block';
                // Update label sesuai dengan pilihan dropdown
                kelasDetailDiv.querySelector('label').innerHTML = 'Nama Kelas Spesifik (' + selectedOption + '):';
            } else {
                kelasDetailDiv.style.display = 'none';
            }
        });
    });
